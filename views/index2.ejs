<script>
    $("#tabs").tabs();
    $(".hoov").hover(
            function () {
                $(this).toggleClass("hoov1");
            }, function () {
                $(this).toggleClass("hoov1");
            }
    );
    $(function () {
        $(document).tooltip();
    });

    $('#tab1 div').on('click', function () {
        var userId = $(this).find('span').text();
        var data = {
            "userId": userId
        };
        $.ajax({
            type: "POST",
            url: '/showUserDialog',
            dataType: "json",
            data: data,
            success: function (ans) {
                var html = new EJS({url: ' /views/userDialog.ejs'}).render(ans);
                $('#content').html(html);
            }
        });
    });

