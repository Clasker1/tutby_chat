<script>
    function login() {
        var password=$("#password").val();
        var user=$("#user").val();

        $.ajax({
            url: '/login',
            data: { password: password,user: user },
            type: 'post'
        });
    }
    function registration() {
        var password=$("#password").val();
        var user=$("#user").val();

        $.ajax({
            url: '/registration',
            data: { password: password,user: user },
            type: 'post'
        });
    }
